@model Juniors_Market.Models.MarketDetailsViewModel

@{
    ViewBag.Title = "GetMarketDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center>
    <h2>
        Market Details
    </h2>
</center>

<div>
    <hr />
    <div class="col-md-4">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.MarketSearch.Marketname)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MarketSearch.Marketname)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.MarketDetail.Address)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MarketDetail.Address)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.MarketDetail.Products)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MarketDetail.Products)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.MarketDetail.Schedule)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MarketDetail.Schedule)
            </dd>
        </dl>
    </div>

    <div class="col-md-6">
        <iframe width="500"
                height="400"
                frameborder="0" style="border:0"
                src="https://www.google.com/maps/embed/v1/search?key=AIzaSyClqIXEuixfPAVE6ZoxSCO7zOFtX2rCpwA&q=@Model.MarketDetail.Latitude,@Model.MarketDetail.Longitude" allowfullscreen></iframe>
    </div>
</div>

<div class="col-md-12">
    <p>
        @Html.ActionLink("Back to List", "Index"," ", new { @class = "btn btn-primary" })
        @Html.ActionLink("Share", "SendEmail", "Customers", new { id = Model.MarketSearch.Id }, new { @class = "btn btn-primary btn-Medium" })
        @Html.ActionLink("Get Directions", "GetDirections", "Customers", new { id = Model.MarketSearch.Id }, new { @class = "btn btn-primary" })
    </p>
</div>

